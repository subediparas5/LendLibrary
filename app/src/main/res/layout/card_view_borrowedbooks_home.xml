<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="175dp"
        android:background="@drawable/cardview_background"
        android:gravity="center|top"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/background_image_background"
            android:gravity="center">

            <ImageView
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:id="@+id/book_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="false"
                android:background="@drawable/background_image_background"
                android:src="@mipmap/ic_launcher"
                android:topLeftRadius="16dp"
                android:topRightRadius="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand     "
            android:paddingTop="5dp"
            android:text="@string/name_of_book"
            android:textSize="14sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/book_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/quicksand"
            android:paddingTop="2dp"
            android:text="@string/writer_of_book"
            android:textSize="12sp"
            android:textColor="@color/white" />
    </LinearLayout>
</android.support.v7.widget.CardView>