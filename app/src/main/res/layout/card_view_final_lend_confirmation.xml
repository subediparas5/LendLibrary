<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="45dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardview_background_my_request"

        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/book_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="start|center_vertical"/>

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:gravity="center|center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">



        <TextView
            android:id="@+id/b_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kalam_light"
            android:paddingTop="3dp"
            android:text="@string/name_of_book"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/owner_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/kalam_light"
            android:paddingTop="3dp"
            android:text="@string/owner_username"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/borrower_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/kalam_light"
            android:paddingTop="3dp"
            android:text="@string/borrower_location"
            android:textColor="@color/white"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/borrower_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/kalam_light"
            android:paddingTop="3dp"
            android:text="@string/borrow_days"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editReq"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:gravity="end|center_vertical"
                android:src="@drawable/edit"
                 />

            <ImageView
                android:id="@+id/dltReq"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:gravity="end|center_horizontal"
                android:src="@drawable/delete" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>